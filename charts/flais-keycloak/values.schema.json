{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["image", "hostname"],
  "definitions": {
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        },
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  },
  "properties": {
    "fullnameOverride": {
      "type": "string"
    },
    "nameOverride": {
      "type": "string"
    },
    "replicas": {
      "type": "integer"
    },
    "image": {
      "$ref": "#/definitions/image"
    },
    "imagePullSecrets": {
      "$ref": "#/definitions/imagePullSecrets"
    },
    "podManagementPolicy": {
      "type": "string"
    },
    "updateStrategy": {
      "type": "string"
    },
    "restartPolicy": {
      "type": "string"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "securityContext": {
      "type": "object"
    },
    "terminationGracePeriodSeconds": {
      "type": "integer"
    },
    "clusterDomain": {
      "type": "string"
    },
    "command": {
      "type": "array"
    },
    "args": {
      "type": "array"
    },
    "env": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "valueFrom"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "valueFrom": {
                "type": "object",
                "additionalProperties": false,
                "required": ["secretKeyRef"],
                "properties": {
                  "secretKeyRef": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["name", "key"],
                    "properties": {
                      "name": { "type": "string", "minLength": 1 },
                      "key": { "type": "string", "minLength": 1 }
                    }
                  }
                }
              }
            },
            "not": { "required": ["value"] }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "value": {
                "type": "string"
              }
            },
            "not": { "required": ["valueFrom"] }
          }
        ]
      }
    },
    "hostname": {
      "type": "string"
    },
    "affinity": {
      "type": "string"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "podLabels": {
      "type": "object"
    },
    "podAnnotations": {
      "type": "object"
    },
    "livenessProbe": {
      "type": "string"
    },
    "readinessProbe": {
      "type": "string"
    },
    "startupProbe": {
      "type": "string"
    },
    "resources": {
      "type": "object"
    },
    "service": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "extraPorts": {
          "type": "array"
        },
        "loadBalancerSourceRanges": {
          "type": "array"
        },
        "httpNodePort": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "httpPort": {
          "type": "integer"
        },
        "httpsNodePort": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "httpsPort": {
          "type": "integer"
        },
        "labels": {
          "type": "object"
        },
        "nodePort": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "type": "string"
        },
        "loadBalancerIP": {
          "type": "string"
        },
        "sessionAffinity": {
          "type": "string"
        },
        "sessionAffinityConfig": {
          "type": "object"
        }
      }
    },
    "dbchecker": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "image": {
          "$ref": "#/definitions/image"
        },
        "resources": {
          "type": "object",
          "properties": {
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            },
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        },
        "securityContext": {
          "type": "object"
        }
      }
    },
    "database": {
      "type": "object",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "database": {
          "type": "string"
        }
      }
    },
    "http": {
      "internalPort": "string",
      "internalScheme": "string"
    },
    "proxy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "headers": {
          "type": "string"
        }
      }
    }
  }
}
